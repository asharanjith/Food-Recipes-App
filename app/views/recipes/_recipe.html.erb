<div id="<%= dom_id recipe %>">

  <h3 class="text-center">
    <%= recipe.name %>
  </h3>
  <div class="row row-cols-2 border border-primary">

  <p class="col">
    <strong>Prepration time:</strong>
    <%= recipe.prepration_time %>
  </p>

  <%# <%= button_to(@recipe.public? ? "public" : "private", toggle_recipe_privacy_path(@recipe), method: :put) %> 

<div class="form-check form-switch">
  <%= check_box_tag "recipe_public_toggle", "", @recipe.public?, class: "form-check-input", data: { url: toggle_recipe_privacy_path(@recipe), method: :put } %>
  <%= label_tag "recipe_public_toggle", "", class: "form-check-label" %>
  <%= label_tag "recipe_public_toggle_label", @recipe.public? ? "Public" : "Private" %>
</div>



  <p class="col">
    <strong>Cooking time:</strong>
    <%= recipe.cooking_time %>
  </p>
</div>
  <p>
    <strong>Instructions:</strong>
    <%= recipe.description %>
  </p>  

</div>
