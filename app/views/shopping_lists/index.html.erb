<h3 class="text-warning text-center">Shopping List</h3>
<%= link_to "Home", "/" %>
<div class="row col-8 offset-2">
  <p class="col-6">Amount of food items to buy: <strong><%= @recipe_foods.count %></strong></p>
  <p class="col-6">Total value of food needed: <strong>$<%= @total_price %></strong></p>
</div>
<table class="table table-striped table-hover mt-5">
      <tr>
        <th class="text-info">Food</th>
        <th class="text-info">Quantity</th>
        <th class="text-info">Price</th>
      </tr>
      <% @recipe_foods.each do |food| %>
        <tr>
            <td><%= food.food.name %></td>
            <td><%= food.quantity %><%= food.food.measurement_unit %></td>
            <td>$<%= food.food.price*food.quantity %></td>
        </tr>
      <% end %>
</table>  
