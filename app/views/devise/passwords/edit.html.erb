<div class="col-md-4 offset-md-4 col-sm-8 offset-sm-2 mt-5">
<h2 class="text-warning text-center">Change your password</h2> 

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %> 

    <%= f.label :password, "New password" %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"form-control mt-2 mb-2" %> 
  
    <%= f.label :password_confirmation, "Confirm new password" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control mt-2 mb-2" %> 
   
    <%= f.submit "Change my password", class:"btn btn-outline-warning" %>
  
<% end %> 
<%= render "devise/shared/links" %>
</div>