<div class="col-md-4 offset-md-4 col-sm-8 offset-sm-2 mt-5">
<h2 class="text-warning text-center">Forgot your password?</h2> 

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
 
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control mt-2 mb-2" %> 
    
    <%= f.submit "Send me reset password instructions", class:"btn btn-outline-warning" %>
 
<% end %>

<%= render "devise/shared/links" %>
</div>